MACRO(USE_OPENGL)
  IF ((NOT OPENGL_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing OpenGL")
    RETURN()
  ENDIF((NOT OPENGL_FOUND) AND (${ARGC} LESS 1))
  IF ((NOT OPENGL_GLU_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing GLU (OpenGL)")
    RETURN()
  ENDIF((NOT OPENGL_GLU_FOUND) AND (${ARGC} LESS 1))
  IF(NOT OPENGL_USED AND OPENGL_FOUND AND OPENGL_GLU_FOUND)
    SET(OPENGL_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${OPENGL_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OPENGL_LIBRARIES})
  ENDIF()
ENDMACRO(USE_OPENGL)
