MACRO(USE_OPENNURBS)
  covise_find_package(OpenNURBS)
  IF ((NOT OPENNURBS_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing openNURBS")
    RETURN()
  ENDIF((NOT OPENNURBS_FOUND) AND (${ARGC} LESS 1))
  IF(NOT OPENNURBS_USED AND OPENNURBS_FOUND)
    SET(OPENNURBS_USED TRUE)
    INCLUDE_DIRECTORIES(${OpenNURBS_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OpenNURBS_LIBRARIES})
  ENDIF()
ENDMACRO(USE_OPENNURBS)

