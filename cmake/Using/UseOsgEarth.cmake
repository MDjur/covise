MACRO(USE_OSGEARTH)
  covise_find_package(OSGEARTH)
  IF ((NOT OSGEARTH_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing OSGEARTH")
    RETURN()
  ENDIF((NOT OSGEARTH_FOUND) AND (${ARGC} LESS 1))
  IF(NOT OSGEARTH_USED AND OSGEARTH_FOUND)
    SET(OSGEARTH_USED TRUE)
    USE_OPENGL()
    INCLUDE_DIRECTORIES(SYSTEM ${OSGEARTH_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OSGEARTH_LIBRARIES})
  ENDIF()
ENDMACRO(USE_OSGEARTH)

