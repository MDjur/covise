MACRO(USE_PROJ)
  IF ((NOT PROJ_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing PROJ")
    RETURN()
  ENDIF((NOT PROJ_FOUND) AND (${ARGC} LESS 1))
  IF(NOT PROJ_USED AND PROJ_FOUND)
    SET(PROJ_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${PROJ_INCLUDE_DIR})
    #ADD_DEFINITIONS(-DACCEPT_USE_OF_DEPRECATED_PROJ_API_H)
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${PROJ_LIBRARIES})
  ENDIF()
ENDMACRO(USE_PROJ)

