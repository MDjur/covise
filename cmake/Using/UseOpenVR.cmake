MACRO(USE_OPENVR)
  covise_find_package(OPENVR)
  IF ((NOT OPENVR_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing OPENVR")
    RETURN()
  ENDIF((NOT OPENVR_FOUND) AND (${ARGC} LESS 1))
  USE_PTHREADS()
  IF(NOT OPENVR_USED AND OPENVR_FOUND)
    SET(OPENVR_USED TRUE)
    ADD_DEFINITIONS(-DHAVE_OPENVR)
    INCLUDE_DIRECTORIES(SYSTEM ${OPENVR_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OPENVR_LIBRARY} ${OPENVR_GL_LIBRARY})
  ENDIF()
ENDMACRO(USE_OPENVR)

