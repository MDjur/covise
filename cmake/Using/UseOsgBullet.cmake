MACRO(USE_OSGBULLET)
  covise_find_package(OsgBullet COMPONENTS osgbCollision osgbDynamics osgbInteraction)
  covise_find_package(osgWorks 2.0.0)
  IF(osgWorks_FOUND AND OSGBULLET_INCLUDE_DIRS)
     SET(OSGBULLET_FOUND TRUE)
  ENDIF()
  IF ((NOT OSGBULLET_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing OsgBullet")
    RETURN()
  ENDIF((NOT OSGBULLET_FOUND) AND (${ARGC} LESS 1))
  IF(NOT OSGBULLET_USED AND OSGBULLET_FOUND)
    SET(OSGBULLET_USED TRUE)
    USE_OPENGL()
    INCLUDE_DIRECTORIES(SYSTEM ${OSGBULLET_INCLUDE_DIRS})
    include( ${osgWorks_USE_FILE} )
	
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OSGBULLET_LIBRARIES})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OSGWORKS_LIBRARIES})
  ENDIF()
ENDMACRO(USE_OSGBULLET)

